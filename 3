#include<stdio.h>
#include<string.h>
#define N 100
#define M 50
int main()
{
  char ch[N],ch1[M];
int x,i,j=0,,t=0,c,a=0;
printf("请输入一个英文句子:\n");
gets(ch);
printf("请输入一串字符:\n");
gets(ch1)
x=strlen(ch);
strlwr(ch);
strlwr(ch1);
for(i=0;i<x;i++)
{
 if(ch1[j]!=ch[i])
   j=0;
 else
   j++;
 if(ch1[j]=='\0')
   a=1;
 if(a==1)
  {
   t++;
   a=0;
   j=0;
  }
 }

printf("字符数有:%d个\n",t);

}
